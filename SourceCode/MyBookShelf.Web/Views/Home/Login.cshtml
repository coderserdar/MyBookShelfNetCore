<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
<div style="text-align: center">
    <form asp-action="Login" method="post" class="form-control-sm" style="align-content: center; width: 80vh; margin: auto" id="frmLogin">
        <h5 class="bg-primary text-white text-center m-2 p-2">@ViewBag.Header</h5>
        <div class="row m-1">
            <div class="col-3">
                <label asp-for="UserName" class="form-label" style="font-weight: bold">@Model.UserName</label>
            </div>
            <div class="col-9">
                <input asp-for="UserName" class="form-control" id="txtUserName"/>
            </div>
        </div>
        <div class="row m-1">
            <div class="col-3"></div>
            <div class="col-9">
                <span asp-validation-for="UserName" class="text-danger" style="font-weight: bold"></span>
            </div>
        </div>
        <div class="row m-1">
            <div class="col-3">
                <label asp-for="Password" class="form-label" style="font-weight: bold">@Model.Password</label>
            </div>
            <div class="col-9">
                <input asp-for="Password" class="form-control" id="txtPassword" type="password"/>
            </div>
        </div>
        <div class="row m-1">
            <div class="col-3"></div>
            <div class="col-9">
                <span asp-validation-for="Password" class="text-danger" style="font-weight: bold"></span>
            </div>
        </div>
        <div class="row m-1">
            <div class="col-6"></div>
            @* This is used to go back to the main page *@
            <div class="col-2">
                <a asp-controller="Home" asp-action="Login">
                    <input type="button" class="btn btn-danger" value="Clean"/>
                </a>
            </div>
            <div class="col-2">
                <a asp-controller="Home" asp-action="Register">
                    <input type="button" class="btn btn-dark" value="Register"/>
                </a>
            </div>
            @* <div class="col-2"> *@
            @*     <button class="btn btn-dark" type="button" id="btnRegister" onclick="Register()">Register</button> *@
            @* </div> *@
            <div class="col-2">
                <button class="btn btn-primary" type="submit" id="btnLogin">Login</button>
            </div>
        </div>
    </form>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript" lang="javascript">
            Lobibox.notify('warning', { size: 'normal', msg: '@ViewBag.Message' });
        </script>
    }
</div>
